<div class="header__pagination">
  <span class="pagination_stripe_top"></span>
  <span class="pagination">01</span>
  <span class="pagination_stripe_bottom"></span>
</div>
<div class='title-vertically'><h1 class='title__vrctl'><%= t('qscar.index.what_we') %></h1></div>
<div class='title-horizontally'><h1 class='title__hrtl'><%= t('qscar.index.do') %></h1></div>
<div class="content__text content__project">
  <div class='qscar-services show reveal'>
    <div class='qscar-services-pagination'>
      <a class='dot active'></a>
      <a class='dot'></a>
      <a class='dot'></a>
      <a class='dot'></a>
      <a class='dot'></a>
    </div>
    <div class='qscar-services-body'>
      <ul class='screens animate'>
        <li class='screen'>
          <div class='media media_advice'>
            <%= render 'qscar/svg/advice' %> 
          </div>
          <h3>
          <%= t('qscar.project.title_advice') %>
            <br><%= t('qscar.project.subtitle_advice') %></br>
          </h3>
          <p><%= t('qscar.project.txt_advice') %></p>
        </li>
        <li class='screen active'>
          <div class='media media_creativity'> 
            <%= render 'qscar/svg/creativity' %>
          </div>
          <h3>
            <%= t('qscar.project.title_web_design') %>
          </h3>
          <p><%= t('qscar.project.txt_web_design') %></p>
        </li>
        <li class='screen'>
          <div class='media media_webdev'> 
            <%= render 'qscar/svg/webDev' %>
          </div>
          <h3>
            <%= t('qscar.project.title_web_dev') %>
          </h3>
          <p><%= t('qscar.project.txt_web_dev') %></p>
        </li>
        <li class='screen'>
          <div class='media media_seo'>
            <%= render 'qscar/svg/seo' %> 
          </div>
          <h3>
            <%= t('qscar.project.title_referencement') %>
          </h3>
          <p><%= t('qscar.project.txt_referencement') %></p>
        </li>
        <li class='screen'>
          <div class='media comm media_hebergement'>
            <%= render 'qscar/svg/hebergement' %> 
          </div>
          <h3>
            <%= t('qscar.project.title_hosting') %>
            <br><%= t('qscar.project.subtitle_hosting') %></br>
          </h3>
          <p><%= t('qscar.project.txt_hosting') %></p>
        </li>
      </ul>
      <button class='prev-screen'>
        <i class="fas fa-angle-left"></i>
      </button>
      <button class='next-screen'>
        <i class="fas fa-angle-right"></i>
      </button>
    </div>
  </div>
</div>
<div class="header_bottom">
  <ul class="social_media">
    <li class="social_media_link"><a href=""><i class="fab fa-linkedin"></i></a></li>
    <li class="social_media_link"><a href="https://twitter.com/QscarDigital"><i class="fab fa-twitter-square"></i></a></li>
    <li class="social_media_link"><a href="https://www.instagram.com/qscar_digital/"><i class="fab fa-instagram"></i></a></li>
  </ul>
</div>
