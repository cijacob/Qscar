<div class='container'>
  <div class='section'>
    <div class=title>
      <span><%= t('our_differents_projects') %></span>
    </div>
    <div class='content'>
      <ul>
        <div class="img img_one">
          <% @projects.each do |p| %>
            <li><%= p.name %></li>
            <li><%= p.description %></li>
            <li><%= p.url %></li>

            <p>Technologies: </p>
            <ul>
              <% p.technos.each do |techno| %>
                <li><%= techno.name %></li>
              <% end %>
            </ul>
          <% end %>
        </div>  
      </ul>
    </div>
  </div>
</div>


